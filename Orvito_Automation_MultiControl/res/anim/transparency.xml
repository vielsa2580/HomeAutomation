<?xml version="1.0" encoding="utf-8" ?>
	<!--
		This is a simple XML definition for a Animation. Over
		the course of 5 seconds, fade in from 0 to 100%
		
	A fade-in or fade-out animation. 0.0 is transparent and 1.0 is opaque.
			android:fromAlpha: Starting opacity offset.
			android:toAlpha:Ending opacity offset.
		
	-->
<set
	xmlns:android="http://schemas.android.com/apk/res/android">
		<alpha
			android:fromAlpha="0.0"
			android:toAlpha="1.0"
			android:startOffset="0"
			android:duration="5000"
			>
		</alpha>
		
	</set>